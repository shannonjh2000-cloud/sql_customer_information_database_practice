-- Look at the table
SELECT * FROM nomnom;

-- Find the all the neighbourhoods for the restaurants in the table
SELECT DISTINCT neighbourhood FROM nomnom;

-- Find all the cuisine types from the table 
SELECT DISTINCT cuisine FROM nomnom;

-- We want Italian food. What are our options?
SELECT * FROM nomnom
WHERE cuisine = 'Italian';

-- Show us all restaurants will 4 star reviews and above
SELECT * FROM nomnom
WHERE review >= 4;

-- We're looking for some budget friendly Italian food. What are our options?
SELECT * FROM nomnom
WHERE cuisine = 'Italian'
      AND price = '$';

-- There's a good Italian restaurant that is 'meatball' something or something 'meatball'. Can you find it?
SELECT * FROM nomnom
WHERE name LIKE '%meatball%';

-- We want delivery what are out options? Somewhere close to Midtown, Downtown or Chinatown.
SELECT * FROM nomnom
WHERE neighbourhood = 'Midtown'
      OR neighbourhood = 'Downtown'
      OR neighbourhood = 'Chinatown';

-- We want a top 10 ranking based on reviews
SELECT * FROM nomnom
ORDER BY review DESC
LIMIT 10;

-- Rate all the restaurants
SELECT name, 
  CASE
  WHEN review > 4.5 THEN 'Extraordinary'
  WHEN review > 4 THEN 'Excellent'
  WHEN review > 3 THEN 'Good'
  WHEN review > 2 THEN 'Fair'
  ELSE 'Poor'
  END AS 'Review'
FROM nomnom;
  
